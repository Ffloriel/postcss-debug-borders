{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "rootDir": ".",
    "esModuleInterop": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "CommonJS"
    }
  }
}
