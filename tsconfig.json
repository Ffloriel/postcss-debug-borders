{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib",
    "declarationDir": ".temp/"
  },
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "CommonJS"
    }
  }
}
