{
  "name": "postcss-debug-borders",
  "version": "1.0.11",
  "description": "",
  "keywords": [
    "postcss"
  ],
  "main": "lib/postcss-debug-borders.js",
  "module": "./lib/postcss-debug-borders.esm.js",
  "types": "./lib/postcss-debug-borders.d.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "jest",
    "build": "rollup -c",
    "docs:clean": "rimraf docs/.vuepress/.temp docs/.vuepress/.cache docs/.vuepress/dist",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "echo \"Error: no docs:deploy script\" && exit 1",
    "lint": "eslint . --ext .ts --ignore-path .gitignore --fix",
    "format": "prettier --write --parser typescript '**/*.ts'",
    "generate-changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ffloriel/postcss-debug-borders.git"
  },
  "author": "Ffloriel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ffloriel/postcss-debug-borders/issues"
  },
  "homepage": "https://github.com/Ffloriel/postcss-debug-borders#readme",
  "devDependencies": {
    "@rollup/plugin-replace": "^3.0.0",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "conventional-changelog-cli": "^2.1.1",
    "csstype": "^3.0.7",
    "eslint": "^7.32.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "postcss": "^8.3.6",
    "prettier": "^2.3.1",
    "rollup": "^2.56.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^1.4.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5",
    "vuepress": "^2.0.0-beta.27"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "ts-node scripts/verify-commit.ts"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run prettier",
      "git add"
    ]
  }
}
