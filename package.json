{
  "name": "postcss-debug-borders",
  "version": "1.0.0",
  "description": "",
  "keywords": [
    "postcss"
  ],
  "main": "lib/postcss-debug-borders.js",
  "module": "./lib/postcss-debug-borders.esm.js",
  "types": "./lib/postcss-debug-borders.d.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "jest",
    "build": "rollup -c",
    "docs:dev": "echo \"Error: no docs:dev script\" && exit 1",
    "docs:build": "echo \"Error: no docs:build script\" && exit 1",
    "docs:deploy": "echo \"Error: no docs:deploy script\" && exit 1",
    "lint": "eslint . --ext .ts --ignore-path .gitignore --fix",
    "format": "prettier --write --parser typescript '**/*.ts'",
    "generate-changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ffloriel/postcss-debug-borders.git"
  },
  "author": "Ffloriel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ffloriel/postcss-debug-borders/issues"
  },
  "homepage": "https://github.com/Ffloriel/postcss-debug-borders#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "@wessberg/rollup-plugin-ts": "^1.3.8",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.20.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rollup": "^2.39.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "ts-node scripts/verify-commit.ts"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run prettier",
      "git add"
    ]
  }
}
